#!/usr/bin/ruby
# WANT_JSON

require 'json'
require 'logger'
require 'pathname'
require 'set'
require 'yaml'

data = {}
File.open(ARGV[0]) do |fh|
  data = JSON.parse(fh.read())
end

unless data['kpm_path'].nil?
  ENV['GEM_PATH']="#{data['kpm_path']}/lib/vendor/ruby/2.2.0"
  Gem.clear_paths
end
require 'kpm'
require 'kpm/version'

logger = Logger.new(STDOUT)
logger.level = Logger::INFO

kpm_facts = KPM::System.new(logger).information(data['bundles_dir'],
                                                true,
                                                data['config_file'],
                                                data['kaui_web_path'],
                                                data['killbill_web_path'])

versions_info = KPM::KillbillServerArtifact.info(data['version'],
                                                 data['overrides'],
                                                 data['ssl_verify'])
result = {
  'changed' => false,
  'ansible_facts' => {
    'kpm' => JSON.parse(kpm_facts),
    'versions_info' => versions_info
  }
}

print JSON.dump(result)
